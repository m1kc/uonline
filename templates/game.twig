{% extends "layout.twig" %}

{% block title %}{{ location_name | tf }}{% endblock title %}

{% block content %}
			<div class="page-header"><h1>{{ location_name | tf }} <small>{{ area_name | tf }}</small></h1></div>

			{% if pic is defined %}
				<img src="{{ pic }}" class="img-polaroid" style="float: right; margin-left: 1em; margin-bottom: 1em;" />
			{% endif %}

			{{ description | tf | nl2p | nl2br }}

			<p style="line-height: 2.5em;">
			{% for i in ways %}
				<a class="btn" href="/action/go/{{ i.to }}">{{ i.name | tf }}</a>
			{% endfor %}
			</p>

			<br />

			<p><small>
			{% if players_list|length > 0 %}
				На этой локации находятся:
				{% for i in players_list %}
					<a href="/profile/id/{{ i.id }}/">{{ i.name }}</a>{% if not loop.last %}, {% endif %}
				{% endfor %}
			{% else %}
				На этой локации больше никого нет.
			{% endif %}
			</small></p>

			<p><small>
			{% if monsters_list|length > 0 %}
				Монстры на этой локации:
				{% for i in monsters_list %}
					<a href="#">{{ i.name }}</a>{% if not loop.last %}, {% endif %}
				{% endfor %}
				<!-- dirty layout -->
				<p>{% if autoinvolved_fm %}<b>Вас атаковали!</b>{% endif %}</p>
				<p>{% if fight_mode %}<a href="/action/escape">Свалить</a>{% else %}<a href="/action/attack">Атаковать</a>{% endif %}</p>
			{% else %}
				На этой локации нет монстров.
			{% endif %}
			</small></p>

			<div style="clear: both;"></div>
{% endblock content %}
