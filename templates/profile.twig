{% extends "layout.twig" %}

{% block title %}Профиль игрока {{ nickname }}{% endblock title %}

{% block content %}
			<div class="page-header"><h1>{{ nickname }} <small>Уровень {{ level }}, #{{ id }}</small></h1></div>

			<div class="row">
				<div class="span5">
					<h3>Здоровье</h3>
					<div class="progress">
						<div class="bar bar-success" style="width: {{ health_percent }}%;"></div>
					</div>
					{{ health }}/{{ health_max }}

					<h3>Мана</h3>
					<div class="progress">
						<div class="bar" style="width: {{ mana_percent }}%;"></div>
					</div>
					{{ mana }}/{{ mana_max }}

					<h3>Опыт</h3>
					<div class="progress bar-warning">
						<div class="bar" style="width: {{ exp_percent }}%;"></div>
					</div>
					{{ exp }}/{{ exp_max }}

					<h3>Эффекты</h3>
					{% if effects|length > 0 %}
						{% for i in effects %}
							{{ i.name }} ({{ i.description }}) &mdash; до {{ i.dismiss_time }}{% if not loop.last %}, {% endif %}
						{% endfor %}
					{% else %}
						Не действует ни один эффект.
					{% endif %}
				</div>
				<div class="span1">
				</div>
				<div class="span6">
					<h3>Характеристики</h3>
					<table class="table table-striped table-hover">
					<tr>
						<td>Энергия</td>
						<td>{{ energy }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Сила</td>
						<td>{{ power }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Защита</td>
						<td>{{ defense }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Ловкость</td>
						<td>{{ agility }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Точность</td>
						<td>{{ accuracy }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Интеллект</td>
						<td>{{ intelligence }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
					<tr>
						<td>Инициатива</td>
						<td>{{ initiative }}&nbsp;&nbsp;<a href="#" class="btn btn-mini">&plus;</a></td>
					</tr>
				</table>
				</div>
			</div>
{% endblock content %}
